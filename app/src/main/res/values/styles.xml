<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust as needed -->
    </style>
    <style name="TabDefaultStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TabActiveStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/ax_yellow</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
